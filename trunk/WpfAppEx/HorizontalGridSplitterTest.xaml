<UserControl x:Class="WpfAppEx.HorizontalGridSplitterTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ex="http://schemas.pescuma.org/wpf-ex/2010/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

	<Grid ex:Grid.Columns="*, 3, *" ex:Grid.Rows="*">

		<Label Content="First column" />

		<GridSplitter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="3" Background="LightGray" ResizeDirection="Columns" />

        <Label Content="Second column" />

	</Grid>
</UserControl>